{
  "name": "packages-i18n",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "extract-translation": "yarn extract-translation:drive",
    "extract-translation:drive": "yarn i18next ../../apps/drive/**/*.{ts,tsx} -c ./i18next-parser.config.mjs -o ./locales/drive/translations-crowdin.json",
    "format-deploy": "yarn format-deploy:drive",
    "format-deploy:drive": "node ./format-deploy.mjs --app=drive --output=../../apps/drive/src/features/i18n/translations.json",
    "format-rebuild-fr:drive": "node ./rebuild-translations.mjs --language=fr --app=drive --output=../../apps/drive/src/features/i18n/translations.json",
    "lint": "eslint --ext .js,.ts,.mjs .",
    "test": "jest"
  },
  "dependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "*",
    "eslint-plugin-import": "2.31.0",
    "i18next-parser": "9.3.0",
    "jest": "29.7.0",
    "ts-jest": "29.3.4",
    "typescript": "*",
    "yargs": "18.0.0"
  }
}
